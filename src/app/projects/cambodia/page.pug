    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body(class='bg-light text-dark')
    // Navbar
    include ../../partials/_navbar.pug
    
    // Hero Section
    .hero-section.text-center.py-5.bg-primary.text-white
      .container
        h1.display-4 Cambodia Solar & Waste-to-Energy
        p.lead Advancing clean energy and sustainable housing for Cambodian communities.
    
